<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Store List View -->
    <record id="view_brandat_store_list" model="ir.ui.view">
        <field name="name">brandat.store.list</field>
        <field name="model">brandat.store</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <!-- Store Form View -->
    <record id="view_brandat_store_form" model="ir.ui.view">
        <field name="name">brandat.store.form</field>
        <field name="model">brandat.store</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="address"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Store Action -->
    <record id="action_brandat_store" model="ir.actions.act_window">
        <field name="name">الفروع</field>
        <field name="res_model">brandat.store</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Store Menu -->
    <menuitem id="menu_brandat_store"
              name="الفروع"
              parent="menu_brandat_config"
              action="action_brandat_store"
              sequence="10"/>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock Transfer Form -->
    <record id="view_brandat_stock_transfer_form" model="ir.ui.view">
        <field name="name">brandat.stock.transfer.form</field>
        <field name="model">brandat.stock.transfer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="تأكيد" 
                            type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_done" string="إكمال التحويل" 
                            type="object" class="btn-success"
                            invisible="state != 'confirmed'"/>
                    <button name="action_cancel" string="إلغاء" 
                            type="object"
                            invisible="state in ['done', 'cancel']"/>
                    <button name="action_draft" string="إرجاع لمسودة" 
                            type="object"
                            invisible="state != 'cancel'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="store_from_id" readonly="state != 'draft'"/>
                            <field name="store_to_id" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="date" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="المنتجات">
                            <field name="line_ids" readonly="state != 'draft'">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="size_id"/>
                                    <field name="color_id"/>
                                    <field name="available_qty" readonly="1"/>
                                    <field name="quantity"/>
                                </list>
                            </field>
                        </page>
                        <page string="ملاحظات">
                            <field name="notes" placeholder="ملاحظات إضافية"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Stock Transfer List -->
    <record id="view_brandat_stock_transfer_list" model="ir.ui.view">
        <field name="name">brandat.stock.transfer.list</field>
        <field name="model">brandat.stock.transfer</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="store_from_id"/>
                <field name="store_to_id"/>
                <field name="date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Stock Transfer Action -->
    <record id="action_brandat_stock_transfer" model="ir.actions.act_window">
        <field name="name">تحويل البضاعة</field>
        <field name="res_model">brandat.stock.transfer</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Stock Inventory Form -->
    <record id="view_brandat_stock_inventory_form" model="ir.ui.view">
        <field name="name">brandat.stock.inventory.form</field>
        <field name="model">brandat.stock.inventory</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_start" string="بدء الجرد" 
                            type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_validate" string="تطبيق الجرد" 
                            type="object" class="btn-success"
                            invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="إلغاء" 
                            type="object"
                            invisible="state in ['done', 'cancel']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-exclamation-triangle" readonly="1">
                            <field name="difference_count" widget="statinfo" string="الفروقات"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="store_id" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="date" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="المنتجات">
                            <field name="line_ids" readonly="state == 'done'">
                                <list editable="bottom" decoration-danger="difference &lt; 0" decoration-success="difference &gt; 0">
                                    <field name="product_id" readonly="1"/>
                                    <field name="size_id" readonly="1"/>
                                    <field name="color_id" readonly="1"/>
                                    <field name="theoretical_qty" readonly="1"/>
                                    <field name="real_qty"/>
                                    <field name="difference" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="ملاحظات">
                            <field name="notes" placeholder="ملاحظات الجرد"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Stock Inventory List -->
    <record id="view_brandat_stock_inventory_list" model="ir.ui.view">
        <field name="name">brandat.stock.inventory.list</field>
        <field name="model">brandat.stock.inventory</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="store_id"/>
                <field name="date"/>
                <field name="difference_count"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Stock Inventory Action -->
    <record id="action_brandat_stock_inventory" model="ir.actions.act_window">
        <field name="name">جرد المخزون</field>
        <field name="res_model">brandat.stock.inventory</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Stock Alert Form -->
    <record id="view_brandat_stock_alert_form" model="ir.ui.view">
        <field name="name">brandat.stock.alert.form</field>
        <field name="model">brandat.stock.alert</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="store_id"/>
                        </group>
                        <group>
                            <field name="min_quantity"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Stock Alert List -->
    <record id="view_brandat_stock_alert_list" model="ir.ui.view">
        <field name="name">brandat.stock.alert.list</field>
        <field name="model">brandat.stock.alert</field>
        <field name="arch" type="xml">
            <list>
                <field name="product_id"/>
                <field name="store_id"/>
                <field name="min_quantity"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Stock Alert Action -->
    <record id="action_brandat_stock_alert" model="ir.actions.act_window">
        <field name="name">تنبيهات المخزون</field>
        <field name="res_model">brandat.stock.alert</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Updated Stock List with State -->
    <record id="view_brandat_stock_list_advanced" model="ir.ui.view">
        <field name="name">brandat.stock.list.advanced</field>
        <field name="model">brandat.stock</field>
        <field name="arch" type="xml">
            <list decoration-danger="state == 'out'" decoration-warning="state == 'low'">
                <field name="store_id"/>
                <field name="product_id"/>
                <field name="size_id"/>
                <field name="color_id"/>
                <field name="quantity"/>
                <field name="min_quantity"/>
                <field name="state" widget="badge" decoration-success="state == 'available'" 
                       decoration-warning="state == 'low'" decoration-danger="state == 'out'"/>
            </list>
        </field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_brandat_stock_management"
              name="إدارة المخزون"
              parent="menu_brandat_root"
              sequence="35"/>

    <menuitem id="menu_brandat_stock_transfer"
              name="تحويل البضاعة"
              parent="menu_brandat_stock_management"
              action="action_brandat_stock_transfer"
              sequence="10"/>

    <menuitem id="menu_brandat_stock_inventory"
              name="جرد المخزون"
              parent="menu_brandat_stock_management"
              action="action_brandat_stock_inventory"
              sequence="20"/>

    <menuitem id="menu_brandat_stock_alert"
              name="تنبيهات المخزون"
              parent="menu_brandat_stock_management"
              action="action_brandat_stock_alert"
              sequence="30"/>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_brandat_size_list" model="ir.ui.view">
        <field name="name">brandat.size.list</field>
        <field name="model">brandat.size</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_brandat_size_form" model="ir.ui.view">
        <field name="name">brandat.size.form</field>
        <field name="model">brandat.size</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_brandat_size" model="ir.actions.act_window">
        <field name="name">المقاسات</field>
        <field name="res_model">brandat.size</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_brandat_size"
              name="المقاسات"
              parent="menu_brandat_config"
              action="action_brandat_size"
              sequence="20"/>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sales Report List -->
    <record id="view_brandat_sales_report_list" model="ir.ui.view">
        <field name="name">brandat.sales.report.list</field>
        <field name="model">brandat.sales.report</field>
        <field name="arch" type="xml">
            <list create="false" edit="false" delete="false">
                <field name="date"/>
                <field name="store_id"/>
                <field name="product_id"/>
                <field name="size_id"/>
                <field name="color_id"/>
                <field name="quantity" sum="الإجمالي"/>
                <field name="price_unit"/>
                <field name="price_total" sum="الإجمالي"/>
            </list>
        </field>
    </record>

    <!-- Sales Report Pivot -->
    <record id="view_brandat_sales_report_pivot" model="ir.ui.view">
        <field name="name">brandat.sales.report.pivot</field>
        <field name="model">brandat.sales.report</field>
        <field name="arch" type="xml">
            <pivot string="تحليل المبيعات">
                <field name="date" type="row" interval="month"/>
                <field name="store_id" type="col"/>
                <field name="quantity" type="measure"/>
                <field name="price_total" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Sales Report Graph -->
    <record id="view_brandat_sales_report_graph" model="ir.ui.view">
        <field name="name">brandat.sales.report.graph</field>
        <field name="model">brandat.sales.report</field>
        <field name="arch" type="xml">
            <graph string="رسم بياني للمبيعات" type="line">
                <field name="date" interval="day"/>
                <field name="price_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Sales Report Search -->
    <record id="view_brandat_sales_report_search" model="ir.ui.view">
        <field name="name">brandat.sales.report.search</field>
        <field name="model">brandat.sales.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="date"/>
                <field name="store_id"/>
                <field name="product_id"/>
                <filter string="اليوم" name="today" 
                        domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="هذا الأسبوع" name="this_week" 
                        domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="هذا الشهر" name="this_month" 
                        domain="[('date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="تجميع حسب">
                    <filter string="التاريخ" name="group_by_date" context="{'group_by': 'date'}"/>
                    <filter string="الفرع" name="group_by_store" context="{'group_by': 'store_id'}"/>
                    <filter string="المنتج" name="group_by_product" context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Stock Report List -->
    <record id="view_brandat_stock_report_list" model="ir.ui.view">
        <field name="name">brandat.stock.report.list</field>
        <field name="model">brandat.stock.report</field>
        <field name="arch" type="xml">
            <list create="false" edit="false" delete="false">
                <field name="store_id"/>
                <field name="product_id"/>
                <field name="size_id"/>
                <field name="color_id"/>
                <field name="quantity" sum="الإجمالي"/>
                <field name="product_value" sum="القيمة الإجمالية"/>
            </list>
        </field>
    </record>

    <!-- Stock Report Pivot -->
    <record id="view_brandat_stock_report_pivot" model="ir.ui.view">
        <field name="name">brandat.stock.report.pivot</field>
        <field name="model">brandat.stock.report</field>
        <field name="arch" type="xml">
            <pivot string="تحليل المخزون">
                <field name="store_id" type="row"/>
                <field name="product_id" type="col"/>
                <field name="quantity" type="measure"/>
                <field name="product_value" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Report Wizard Form -->
    <record id="view_brandat_report_wizard_form" model="ir.ui.view">
        <field name="name">brandat.report.wizard.form</field>
        <field name="model">brandat.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="report_type"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="store_id"/>
                            <field name="product_id"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_generate_report" string="تقرير المبيعات" 
                            type="object" class="btn-primary"/>
                    <button name="action_stock_report" string="تقرير المخزون" 
                            type="object" class="btn-info"/>
                    <button name="action_top_products" string="أكثر المنتجات مبيعاً" 
                            type="object" class="btn-success"/>
                    <button name="action_store_performance" string="أداء الفروع" 
                            type="object" class="btn-warning"/>
                    <button string="إلغاء" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Report Wizard Action -->
    <record id="action_brandat_report_wizard" model="ir.actions.act_window">
        <field name="name">التقارير</field>
        <field name="res_model">brandat.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Sales Report Action -->
    <record id="action_brandat_sales_report" model="ir.actions.act_window">
        <field name="name">تقرير المبيعات</field>
        <field name="res_model">brandat.sales.report</field>
        <field name="view_mode">list,pivot,graph</field>
    </record>

    <!-- Stock Report Action -->
    <record id="action_brandat_stock_report" model="ir.actions.act_window">
        <field name="name">تقرير المخزون</field>
        <field name="res_model">brandat.stock.report</field>
        <field name="view_mode">list,pivot,graph</field>
    </record>

    <!-- Reports Menu -->
    <menuitem id="menu_brandat_reports"
              name="التقارير"
              parent="menu_brandat_root"
              sequence="50"/>

    <menuitem id="menu_brandat_report_wizard"
              name="إنشاء تقرير"
              parent="menu_brandat_reports"
              action="action_brandat_report_wizard"
              sequence="10"/>

    <menuitem id="menu_brandat_sales_report"
              name="تقرير المبيعات"
              parent="menu_brandat_reports"
              action="action_brandat_sales_report"
              sequence="20"/>

    <menuitem id="menu_brandat_stock_report"
              name="تقرير المخزون"
              parent="menu_brandat_reports"
              action="action_brandat_stock_report"
              sequence="30"/>
</odoo>
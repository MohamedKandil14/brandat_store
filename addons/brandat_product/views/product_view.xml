<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product List View -->
    <record id="view_brandat_product_list" model="ir.ui.view">
        <field name="name">brandat.product.list</field>
        <field name="model">brandat.product</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="price"/>
            </list>
        </field>
    </record>

    <!-- Product Form View -->
    <record id="view_brandat_product_form" model="ir.ui.view">
        <field name="name">brandat.product.form</field>
        <field name="model">brandat.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="price"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Product Action -->
    <record id="action_brandat_product" model="ir.actions.act_window">
        <field name="name">المنتجات</field>
        <field name="res_model">brandat.product</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Product Menu -->
    <menuitem id="menu_brandat_product"
              name="المنتجات"
              parent="menu_brandat_root"
              action="action_brandat_product"
              sequence="20"/>
</odoo>